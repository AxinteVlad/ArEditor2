<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/furniture_item_card"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin10"
        android:elevation="5dp"
        card_view:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_adapter_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@color/quantum_deeppurple700" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_adapter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mobila"
                    android:paddingLeft="@dimen/margin10"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_adapter_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="@dimen/margin10"
                        android:paddingTop="5dp"
                        android:hint="4.7"
                        android:paddingRight="5dp"
                        android:paddingBottom="@dimen/margin10"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="・"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/item_adapter_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="@dimen/margin10"
                        android:paddingBottom="@dimen/margin10"
                        android:hint="D"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="・"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/item_adapter_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="@dimen/margin10"
                        android:paddingBottom="@dimen/margin10"
                        android:hint="Table"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/item_adapter_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="150 RON"
                    android:paddingLeft="@dimen/margin10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>